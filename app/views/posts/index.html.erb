<h1>User Posts page</h1>
<div class='user'>
  <div class='img-container'>
  <img src=<%=@user.photo%> alt="Profile"/>
  </div>
  <div class='user-infos'>
    <h3><%=@user.name%></h3>
    <p>Number of Posts : <%=@user.posts_counter or 0%></p>
  </div>
</div>
  <% @posts.each do |post| %>
  <div class="post">
  <a href="/users/<%= @user.id %>/posts/<%= post.id %>">
  <%= render'partials/post', post: post%>
  </a>
  
  <div class='comment'>
    <% post.most_recent_comments.each do |comment| %>
      <p> <%= comment.user.name%>: <%= comment.text%><p>
  <% end %>
  </div>
  </div>
  <% end%>