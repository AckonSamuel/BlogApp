    <li class='comment'><%= comment.user.name %> : <%= comment.text %>
    <% if can? :destroy, @comment %>
        <%= button_to 'Delete comment',
        user_post_comment_path(comment.user, comment.post, comment),
              method: :delete,
              data: {confirm: 'Are you sure you want to delete this comment'}, class: 'btn btn-danger'%>
        <% end %>
    </li>